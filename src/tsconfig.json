{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",

        "outDir": "../dist",
        "declaration": true,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "newLine": "LF"
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "genDir": "compiled"
    },
    "exclude": [
        "./compiled/"
    ]
}