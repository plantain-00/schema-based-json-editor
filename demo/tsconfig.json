{
    "compilerOptions": {
        "target": "es5",

        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],

        "module": "esnext",
        "moduleResolution": "node",

        "declaration": false,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "newLine": "LF"
    },
    "include": [
        "angular/*",
        "vue/*",
        "react/*"
    ]
}